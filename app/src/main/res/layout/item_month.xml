<?xml version="1.0" encoding="utf-8"?>
<com.example.workouttracker.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/tvMonthName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Month"
        android:textSize="18sp" />

    <GridLayout
        android:id="@+id/gridCalendarDays"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="7"
        android:rowCount="6"
        android:orientation="horizontal"
        android:useDefaultMargins="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
    </GridLayout>

</com.example.workouttracker.SquareLinearLayout>




